@model IEnumerable<Department> // recieving data from controller
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create New Department</a>
<br />
<br />
@if (Model.Count() > 0) //Model: the value of the return type
{
    <table class="table table-striped tabel-hover">
        <thead>
            <th>@Html.DisplayNameFor(D => D.Code)</th> 
            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
            <th>Detail</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>

        <tbody>
            @foreach (var departemnt in Model)
            {
                <tr>
                    <td>@departemnt.Code</td>
                    <td>@departemnt.Name</td>
                    <td>@departemnt.DateOfCreation</td>
                    <td>
                        <a asp-action="Details" asp-controller="Department" asp-route-id="@departemnt.Id" class="btn btn-success">
                            <i class="fas fa-eye"></i> Details @*add font awesome linkn in layout*@
                        </a>
                    </td>
                    <td>
                         <a asp-action="Edit" asp-controller="Department" asp-route-id="@departemnt.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Update 
                        </a>
                    </td>

                    <td>
                         <a asp-action="Delete" asp-controller="Department" asp-route-id="@departemnt.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-warning">
        <p>There is No Departemnts!</p>
    </div>
}

