@model IEnumerable<Employee> 
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />
<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create New Employee</a>
<br />
<br />
@if (Model.Count() > 0) 
{
    <table class="table table-striped tabel-hover">
        <thead>
            <th>@Html.DisplayNameFor(E => E.Name)</th>
            <th>@Html.DisplayNameFor(E => E.Age)</th>
            <th>@Html.DisplayNameFor(E => E.Salary)</th>
            <th>@Html.DisplayNameFor(E => E.Email)</th>
            <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(E => E.IsActive)</th>
            <th>@Html.DisplayNameFor(E => E.HireDate)</th>
            <th>Detail</th>
            <th>Update</th>
            <th>Delete</th>
        </thead>

        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    @*<td>@employee.Salary</td>*@
                    <td>@Html.DisplayFor(M => @employee.Salary)</td>
                    <td>@Html.DisplayFor(M => @employee.Email)</td>
                    <td>@Html.DisplayFor(M => @employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M => @employee.IsActive)</td>
                    <td>@Html.DisplayFor(M => @employee.HireDate)</td>
                    <td>
                        <div>
                            <a asp-action="Details" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-success">
                                <i class="fas fa-eye"></i> Details 
                            </a>
                        </div>
                    </td>
                    <td>
                         <a asp-action="Edit" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Update 
                        </a>
                    </td>

                    <td>
                         <a asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}
else{
    <div class="alert alert-warning">
        <p>There is No Employee!</p>
    </div>
}

